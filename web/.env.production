# API Configuration
# IMPORTANT: Use /api/proxy for same-origin cookie handling
# This enables HttpOnly cookies to work correctly in deployed environment
# The proxy route (running in the same container) forwards requests to the backend
NEXT_PUBLIC_API_URL=/api/proxy
NEXT_PUBLIC_ENV=production

# Auth Strategy
# Always use HttpOnly cookies in production for security
NEXT_PUBLIC_USE_LOCAL_STORAGE_AUTH=false
