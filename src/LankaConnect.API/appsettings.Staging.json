{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information",
        "Microsoft.EntityFrameworkCore": "Warning",
        "Microsoft.AspNetCore": "Warning",
        "System": "Warning",
        "LankaConnect": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] {CorrelationId} {SourceContext}: {Message:lj}{NewLine}{Exception}",
          "restrictedToMinimumLevel": "Information"
        }
      }
    ]
  },
  "ConnectionStrings": {
    "DefaultConnection": "${DATABASE_CONNECTION_STRING}",
    "Redis": "localhost:6379"
  },
  "Jwt": {
    "Key": "${JWT_SECRET_KEY}",
    "Issuer": "${JWT_ISSUER}",
    "Audience": "${JWT_AUDIENCE}",
    "AccessTokenExpirationMinutes": 30,
    "RefreshTokenExpirationDays": 30
  },
  "EntraExternalId": {
    "IsEnabled": "${ENTRA_ENABLED:true}",
    "TenantId": "${ENTRA_TENANT_ID}",
    "ClientId": "${ENTRA_CLIENT_ID}",
    "Instance": "https://login.microsoftonline.com/",
    "Audience": "${ENTRA_AUDIENCE}",
    "ValidateIssuer": true,
    "ValidateAudience": true,
    "ValidateLifetime": true,
    "ValidateIssuerSigningKey": true,
    "ClockSkew": "00:05:00"
  },
  "AzureStorage": {
    "ConnectionString": "${AZURE_STORAGE_CONNECTION_STRING}",
    "DefaultContainer": "business-images"
  },
  "Stripe": {
    "SecretKey": "sk_test_4eC39HqLyjWDarhtT1l8w65C",
    "PublishableKey": "pk_test_51234567890abcdefghijklmnop"
  },
  "EmailSettings": {
    "Provider": "Azure",
    "AzureConnectionString": "${AZURE_EMAIL_CONNECTION_STRING}",
    "AzureSenderAddress": "${AZURE_EMAIL_SENDER_ADDRESS}",
    "SenderName": "LankaConnect Staging",
    "SmtpServer": "${SMTP_HOST}",
    "SmtpPort": 587,
    "SenderEmail": "${EMAIL_FROM_ADDRESS}",
    "Username": "${SMTP_USERNAME}",
    "Password": "${SMTP_PASSWORD}",
    "EnableSsl": true
  },
  "AllowedHosts": "*",
  "ASPNETCORE_ENVIRONMENT": "Staging",
  "Kestrel": {
    "Endpoints": {
      "Http": {
        "Url": "http://+:5000"
      }
    },
    "Limits": {
      "MaxRequestBodySize": 104857600,
      "RequestHeadersTimeout": "00:05:00",
      "KeepAliveTimeout": "00:05:00"
    }
  }
}
